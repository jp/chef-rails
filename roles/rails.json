{
  "name": "rails",
  "chef_type": "role",
  "description": "Rails Postgres and Nginx",
  "run_list": [
    "role[rbenv-ruby]",
    "recipe[nginx]",
    "recipe[postgresql::server]",
    "recipe[postgresql::client]"
  ],
  "default_attributes": {},
  "override_attributes": {
    "postgresql": {
      "config":{
        "listen_addresses":"localhost"
        },
      "password": {
        "postgres": "iloverandompasswordsbutthiswilldo"
      }
    },
    "nginx": {
      "default_site_enabled": false,
      "workers": 4,
      "init_style": "init",
      "source": {
        "prefix": "/opt/nginx"
      }
    }
  }
}
